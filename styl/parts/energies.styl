#energies
    padding 95px 0 88px
    background-image url(../img/energies_bg.png)
    background-repeat no-repeat
    background-position: center bottom
    background-size: cover
.energies_title
    font-size: 27px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.111;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    margin-bottom: 52px
    span
        color #fcac31
.en_img
    margin 0 auto 18px
    display block
.en_text
    font-size: 19px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.579;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    span
        color #faab32
.en_button
    margin 83px auto 0