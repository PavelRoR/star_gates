#main
    width 100%
    padding 0 0 133px
    background-image url(../img/main_bg.png)
    background-repeat no-repeat
    background-position  bottom center
    background-size: cover
    position relative
    z-index: 20
#header
	padding: 30px 0
	overflow hidden
	z-index: 9
	position relative
	margin-bottom: 39px
#logo
	float: left
	opacity .29
	width 163px
.contacts
	float: right
	text-align: right
	line-height  12px
	a
		font-size: 10px
		.fa
			color: #ffac2e
			font-size: 16px
			margin: 0 14px 0 38px
			line-height: 12px
		.fa+span
			line-height: 12px
			font-size: 16px;
			font-family: "OpenSansRegular", sans-serif;
			color: rgba(#fff, .8)
			text-align: right;
			&:hover
				text-decoration underline
.tel:first-child
	.fa-phone
		margin-left: 0
.pre
    font-size: 20px;
    font-family: "OpenSansBold", sans-serif;
    color: rgba(241, 183, 8, 0.98);
    line-height: 1.2;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    span
        display block
        font-size: 18px;
        font-family: "OpenSansItalic", sans-serif;
        color: rgba(252, 252, 252, 0.98);
        margin-top: 7px
h1
    font-size: 46px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.261;
    text-align: left;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.13);
    margin 23px 0 50px
    letter-spacing: -1px;
.main_date
    p
        &:first-child
            font-size: 20px;
            font-family: "OpenSansRegular", sans-serif;
            color: rgba(255, 255, 255, 0.98);
            text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.2);
        &:last-child
            font-size: 27px;
            font-family: "PlayfairDisplayBold", serif;
            color: rgba(239, 181, 10, 0.98);
            line-height: 1.2;
            text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.2);
            span
                color #fff
.button_main
    margin-top: 53px