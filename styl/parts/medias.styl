@media screen and (min-width 2300px)
    .container
        width 1400px
    .pre
    .main_date p:first-child
    .for_list li
    .day_list li
    .en_text
    .int_text
    .price
        font-size: 23px
    .pre span
    .button
    .contacts a .fa+span
    .author_about_list li
        font-size: 21px
    h1
        font-size: 56px
    #main
        padding 45px 0 140px
    #for
    #results
        margin-top: -115px
        padding 245px 0
        background-position: center -350px
    #results
        margin-top: -135px
    .practics_par
        max-width 850px
        font-size: 32px
        &:nth-child(2)
            font-size: 28px
        &:last-child
            font-size: 24px
    .day_container
        max-width 1200px
        height 245px
    .day_name
        top: 12px;
        width: 254px
    .day_num
        left: 71px;
        top: 94px;
        width: 61px;
        height: 61px;
        line-height: 61px;
        font-size: 34px;
    .interest_subtitle
        font-size: 25px
    .flip-clock-divider .flip-clock-label
    .flip-clock-divider.minutes .flip-clock-label
    .flip-clock-divider.seconds .flip-clock-label
        right -72px
    .rev_text
        font-size: 19px
@media screen and (max-width 1199px)
    .contacts a .fa
        margin 0 8px 0 14px
    #for
    #results
        margin-top: -50px
        background-position: center
        padding 100px 0
    #reveiws
        margin-top: -65px
        padding: 80px 0
    #author
        padding-bottom: 60px
        background-position: center bottom
    .author_title
        margin-bottom: 10px
    #olga
        max-width 420px
        bottom: -50px;
    .author_about
        max-width calc(100% - 427px)
    .author_about_title
        margin-bottom: 20px
@media screen and (max-width 991px)
    #header
        padding 15px 0
    #logo
        float: none
        margin 0 auto 10px
        display block
    .contacts
        float: none
        text-align: center
        a
            display: inline-block
            .fa
                font-size: 14px
            &+span
                font-size: 14px
    .day_container
        width 100%
    .day_num_continer
        width: 145px
    .day_list_container
        padding-right: 20px
    #olga
        max-width 300px
        left -50px
        bottom: -250px
    .author_about
        max-width: calc(100% - 300px);
    #reveiws
        margin-top: -45px
@media screen and (max-width 767px)
    #main
        background-position: center top
    #for, #results
        background-image none
        padding 40px 0
        margin-top: 0
    .for_container
        max-width 100%
        float: none
    .for_title
        margin 0 0 30px
    #plan
        padding-bottom: 60px
    .plan_title
        margin: 40px 0
    .day_container
        max-width 400px
        height auto
        padding 0 0 20px
    .day_num_continer
        width 100%
        float: none
    .day_name
        transform: none
        margin 0 auto
        top -50px
        left 0
        right 0
        line-height: 740px
        top -300px
        width: 400px
        height 400px
        border-radius: 0
    .day_num
        left 0
        right 0
        margin 0 auto
        top: 10px
    .day_list_container
    .day_list
        display block
    .day_list_container
        padding-right: 0
    .day_list
        margin: 120px auto 0
        li
            padding-left: 20px
            margin-left: 20px
    #energies
        padding 60px 0
    .en_img
    .int_img
        margin-bottom: 10px
    .en_text
    .int_text
        margin 0 auto 25px
        max-width 500px
    .en_button
        margin-top: 30px
    #interest
        padding-top: 60px
    #author
        background-image: none
        padding-bottom: 30px
    #olga
        float: none
        position: static
        display block
    .author_about
        max-width 100%
    .author_about_title
        margin-top:  40px
    #reveiws
        margin-top: 0
        padding: 60px 0
    #footer
        padding 25px 0
    #prices
        max-width 90%