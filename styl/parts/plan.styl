#plan
    padding 0 0 150px
    background-image url(../img/plan_bg.jpg)
    background-repeat no-repeat
    background-position: center top
    background-size: cover
#practics
    padding 75px 0 93px
    background-image url(../img/aux_1.png)
    background-repeat no-repeat
    background-position: center bottom
    background-size: cover
.practics_par
    font-size: 27px;
    font-family: "PlayfairDisplayBold";
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.5;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    width 100%
    max-width 680px
    margin: 0 auto 34px
    span
        color #ffad30
    &:nth-child(2)
        font-size: 22px
    &:last-child
        font-size: 19px
        margin-bottom: 0
.plan_title
    font-size: 37px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgb(33, 35, 40);
    margin 94px 0 72px
    text-align: center
.day_container
    border-radius: 10px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 13.28px 2.72px rgba(0, 0, 0, 0.05);
    width: 944px;
    height: 190px;
    margin 0 auto 25px
    overflow hidden
.day_container_fourth
    margin-bottom: 0
.day_num_continer
    height 100%
    width 196px
    position relative
    float left
.day_num
    border-radius: 50%;
    background-color: rgb(57, 75, 96);
    position: absolute;
    left: 65px;
    top: 76px;
    width: 51px;
    height: 51px;
    font-size: 24px;
    font-family: "OpenSansBold", sans-serif;
    color: rgb(255, 255, 255);
    line-height: 51px;
    text-align: center
    z-index 6
.day_name
    border-radius: 50%;
    background-color: rgb(252, 204, 56);
    position: absolute;
    left: -134px;
    top: -12px;
    width: 223px;
    height: 223px;
    font-size: 22px;
    font-family: "OpenSansBold", sans-serif;
    color: rgb(38, 49, 65);
    line-height: 335px;
    z-index 3
    text-align: center
    transform: rotate(-90deg);
.day_list_container
    display: table
    height 100%
    padding-right: 60px
.day_list
    display: table-cell
    vertical-align: middle
    li
        list-style: none
        font-size: 18px;
        color: rgb(38, 49, 65);
        line-height: 1.3;
        margin-bottom: 21px
        padding-left: 33px
        background-image url(../img/yellow_disc.png)
        background-repeat no-repeat
        background-position 0 8px
        &:last-child
            margin-bottom: 0
        span
            display block
            font-family: 'OpenSansItalic', sans-serif
            margin-top: 10px