#interest
    padding 103px 0 200px
    background-image url(../img/interest_bg.png)
    background-repeat no-repeat
    background-position center bottom
    background-size: cover
    position relative
    z-index: 9
.interest_title
    font-size: 27px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgba(254, 168, 42, 0.98);
    line-height: 1.111;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    margin-bottom: 34px
.interest_subtitle
    font-size: 22px;
    font-family: "PlayfairDisplayBold", serif;
    line-height: 1.33;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    margin 0 auto 57px
    width 100%
    max-width 735px
    color rgba(#fff, .98)
    span
        color: rgba(254, 168, 42, 0.98);
.int_img
    margin  0 auto 16px
    display block
.int_text
    font-size: 19px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgba(255, 255, 255, 0.98);
    line-height: 1.579;
    text-align: center;
    text-shadow: 0px 0px 14.82px rgba(0, 0, 0, 0.15);
    span
        color: rgba(254, 168, 42, 0.98);
.in_span_main
    display block
#prices
    border-radius: 15px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 13px 21.84px 2.16px rgba(12, 10, 10, 0.05);
    position: absolute;
    width: 679px;
    left 0
    right 0
    bottom -180px
    margin 0 auto
    padding 20px
    text-align: center
.price
    font-size: 20px;
    color: rgb(53, 64, 83);
    line-height: 1.15;
    margin-bottom: 30px
    span
        font-size: 26px
        font-family: 'OpenSansBold', sans-serif
        display: inline-block
.right_now
    font-size: 28px;
    font-family: "PlayfairDisplayBold", serif;
    color: rgb(53, 64, 83);
    line-height: 0.821;
    text-align: center;
.button_buy
    margin 25px auto 0
.flip-clock-wrapper
    width 335px
.right_now_red 
    color: red
    margin-top: 30px
.flip-clock-wrapper ul
    width 45px
    height 56px
    margin 3px
.flip-clock-wrapper ul li
    line-height: 56px
.flip-clock-wrapper ul li a div.up::after
    top 26px
    height 1px
.flip-clock-wrapper ul li a div div.inn
    font-size: 43px
.flip-clock-divider
    height 67px
.flip-clock-dot.top
    top 40px
.flip-clock-dot
    width 7px
    height 7px
    left 7px
.flip-clock-dot.bottom
    bottom: 37px
.flip-clock-divider .flip-clock-label
.flip-clock-divider.minutes .flip-clock-label
.flip-clock-divider.seconds .flip-clock-label
    right -70px